{
  "name": "@semihcihan/developer-tool",
  "version": "1.0.0",
  "description": "A Node.js CLI tool to synchronize in-app purchases and subscriptions with the App Store from a local JSON file.",
  "main": "dist/cli.js",
  "bin": {
    "app-store-sync": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "start:api": "node dist/server.js",
    "dev:api": "npx ts-node src/server.ts",
    "test": "jest --config jest.unit.config.js",
    "test:unit": "jest --config jest.unit.config.js",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:coverage": "jest --config jest.unit.config.js --coverage",
    "prepublishOnly": "npm run build",
    "codegen": "openapi-typescript openapi.json --output src/generated/app-store-connect-api/index.ts",
    "split-openapi": "npx redocly split openapi.json --outDir=openapi",
    "fetch-currencies": "npx ts-node src/scripts/fetch-territories.ts && npx ts-node src/scripts/fetch-ppp.ts && npx ts-node src/scripts/update-exchange-rates.ts",
    "update-rates": "npx ts-node src/scripts/update-exchange-rates.ts",
    "fetch": "npx ts-node src/cli.ts fetch --id 6503259293 --f fetch.json",
    "apply": "npx ts-node src/cli.ts apply --f apply.json",
    "plan": "npx ts-node src/cli.ts plan --f apply.json",
    "validate": "npx ts-node src/cli.ts validate-format --f apply.json",
    "set-price": "npx ts-node src/cli.ts set-price --f apply.json",
    "compare-price": "npx ts-node src/cli.ts compare-price --i apply.json --o compare-price.csv",
    "example": "npx ts-node src/cli.ts example --t full"
  },
  "keywords": [],
  "author": "Semih Cihan",
  "license": "ISC",
  "files": [
    "dist/",
    "README.md"
  ],
  "dependencies": {
    "@types/lodash": "^4.17.20",
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "openapi-fetch": "^0.14.0",
    "winston": "^3.17.0",
    "yargs": "^17.7.2",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@redocly/cli": "^1.34.4",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.10",
    "@types/yargs": "^17.0.33",
    "jest": "^30.0.4",
    "openapi-typescript": "^7.0.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
