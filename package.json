{
  "name": "@semihcihan/developer-tool",
  "version": "1.0.0",
  "description": "A Node.js CLI tool to synchronize in-app purchases and subscriptions with the App Store from a local JSON file.",
  "main": "dist/cli.js",
  "bin": {
    "app-store-sync": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "test": "jest",
    "prepublishOnly": "npm run build",
    "codegen": "openapi-typescript openapi.json --output src/generated/app-store-connect-api/index.ts",
    "fetch": "npx ts-node src/cli.ts fetch --id 1523230470 --file test.json",
    "apply": "npx ts-node src/cli.ts apply --id 1523230470 --file test2.json",
    "apply-file": "npx ts-node src/cli.ts apply --current-state-file test.json --file test2.json",
    "split-openapi": "npx redocly split openapi.json --outDir=openapi"
  },
  "keywords": [],
  "author": "Semih Cihan",
  "license": "ISC",
  "dependencies": {
    "@types/lodash": "^4.17.20",
    "axios": "^1.10.0",
    "dotenv": "^17.0.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "openapi-fetch": "^0.14.0",
    "yargs": "^17.7.2",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@redocly/cli": "^1.34.4",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.10",
    "@types/yargs": "^17.0.33",
    "jest": "^30.0.4",
    "openapi-typescript": "^7.0.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
