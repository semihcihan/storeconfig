{
  "name": "@semihcihan/developer-tool",
  "version": "1.0.0",
  "description": "A Node.js CLI tool to synchronize in-app purchases and subscriptions with the App Store from a local JSON file.",
  "main": "dist/cli.js",
  "bin": {
    "app-store-sync": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build",
    "codegen": "openapi-typescript openapi.json --output src/generated/app-store-connect-api/index.ts",
    "split-openapi": "npx redocly split openapi.json --outDir=openapi",
    "fetch": "npx ts-node src/cli.ts fetch --id 6503259293 --f fetch.json",
    "apply-file": "npx ts-node src/cli.ts apply --c fetch.json --f apply.json --id NOT_NEEDED",
    "plan-file": "npx ts-node src/cli.ts plan --c fetch.json --f apply.json --id NOT_NEEDED",
    "validate-file": "npx ts-node src/cli.ts validate-format --f apply.json",
    "fetch-currencies": "npx ts-node src/scripts/fetch-territories.ts && npx ts-node src/scripts/fetch-ppp.ts",
    "update-rates": "npx ts-node src/scripts/update-exchange-rates.ts",
    "set-price": "npx ts-node src/cli.ts set-price --f apply.json",
    "test-equalizations": "npx ts-node src/research/test-equalizations.ts"
  },
  "keywords": [],
  "author": "Semih Cihan",
  "license": "ISC",
  "files": [
    "dist/",
    "README.md"
  ],
  "dependencies": {
    "@types/lodash": "^4.17.20",
    "axios": "^1.10.0",
    "dotenv": "^17.0.1",
    "jsonwebtoken": "^9.0.2",
    "openapi-fetch": "^0.14.0",
    "winston": "^3.17.0",
    "yargs": "^17.7.2",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@redocly/cli": "^1.34.4",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.10",
    "@types/yargs": "^17.0.33",
    "jest": "^30.0.4",
    "openapi-typescript": "^7.0.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
